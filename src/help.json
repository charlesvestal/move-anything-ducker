{
  "title": "Ducker",
  "children": [
    {
      "title": "Overview",
      "lines": [
        "MIDI-triggered",
        "sidechain ducker.",
        "",
        "Classic pumping",
        "effect without",
        "audio sidechain.",
        "",
        "Responds to a",
        "specific MIDI note",
        "to duck the signal."
      ]
    },
    {
      "title": "Controls",
      "children": [
        {
          "title": "Knob Mapping",
          "lines": [
            "Knob 1: Channel",
            " Omni or 1-16",
            "",
            "Knob 2: Trigger Note",
            " MIDI note (def C1)",
            "",
            "Knob 3: Mode",
            " Trigger: one-shot",
            " Gate: note-off stops",
            "",
            "Knob 4: Depth",
            " Max attenuation"
          ]
        },
        {
          "title": "Envelope",
          "lines": [
            "Knob 5: Attack",
            " Duck speed (0-50ms)",
            "",
            "Knob 6: Hold",
            " Hold at max duck",
            " (0-500ms)",
            "",
            "Knob 7: Release",
            " Recovery (0-1000ms)",
            "",
            "Knob 8: Curve",
            " Linear, Expo,",
            " S-Curve, or Pump"
          ]
        },
        {
          "title": "Velocity",
          "lines": [
            "Vel Sensitivity:",
            " 0 = fixed depth",
            " 1 = velocity scales",
            "   ducking amount",
            "",
            "Higher velocity =",
            "less ducking when",
            "sensitivity is high."
          ]
        }
      ]
    },
    {
      "title": "MIDI",
      "lines": [
        "Responds to one",
        "specific MIDI note.",
        "",
        "Default: C1 (note 36)",
        "",
        "Channel: filter to",
        "specific channel or",
        "Omni for all.",
        "",
        "Trigger mode: note-on",
        "starts full envelope.",
        "Gate mode: note-off",
        "triggers release."
      ]
    }
  ]
}
